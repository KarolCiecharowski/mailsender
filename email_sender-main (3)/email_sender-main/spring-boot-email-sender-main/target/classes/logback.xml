<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="integracyjny" class="ch.qos.logback.core.FileAppender">
        <file>integracyjny.log</file>
        <encoder>
            <pattern>%d %p [%t] %c:%L %m%n</pattern>
        </encoder>
    </appender>
    <appender name="ogólny" class="ch.qos.logback.core.FileAppender">
        <file>ogólny.log</file>
        <encoder>
            <pattern>%d %p [%t] %c:%L %m%n</pattern>
        </encoder>
    </appender>
    <logger name="org.springframework.web" level="INFO">
        <appender-ref ref="integracyjny"/>
    </logger>
    <root level="INFO">
        <appender-ref ref="ogólny"/>
    </root>
</configuration>